<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button Name="Button1" Click="Button1_OnClick" Height="38" Width="84">关闭</Button>
        <Button Name="Button2" Click="Button2_OnClick" Canvas.Left="102" Canvas.Top="10" Height="28" Width="119">打开</Button>
        <TextBox Width="200" Height="199" Background="Bisque" Name="TextBox1" 
                 GotFocus="TextBox1_OnGotFocus" LostFocus="TextBox1_OnLostFocus" 
                 Canvas.Left="26" Canvas.Top="43"></TextBox>
        <TextBox Width="200" Height="199" Background="Aquamarine" Name="TextBox2" 
                 GotFocus="TextBox1_OnGotFocus" LostFocus="TextBox1_OnLostFocus" 
                 Canvas.Left="246" Canvas.Top="43" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBox>
    </Canvas>
</Window>
